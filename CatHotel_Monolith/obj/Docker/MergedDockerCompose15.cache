services:
  cathotel_monolith:
    build:
      context: D:\sibbt\Documents\uni_work\year_3\Semester_2\Final_Year_Project\monolithic_implementation\CatHotel_Monolith
      dockerfile: Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: CatHotel_Monolith
      target: base
    container_name: cathotel_monolith
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: cathotelmonolith:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  "/app/bin/Debug/netcoreapp3.1/CatHotel_Monolith.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 81
      target: 80
    - target: 80
    tty: true
    volumes:
    - D:\sibbt\Documents\uni_work\year_3\Semester_2\Final_Year_Project\monolithic_implementation\CatHotel_Monolith:/app:rw
    - C:\Users\sibbt\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\sibbt\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\sibbt\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Microsoft\Xamarin\NuGet:/root/.nuget/fallbackpackages:ro
    - C:\Users\sibbt\.nuget\packages:/root/.nuget/packages:ro
    - D:\sibbt\Documents\uni_work\year_3\Semester_2\Final_Year_Project\monolithic_implementation\CatHotel_Monolith:/src:rw
  ms-sql-server:
    container_name: ms-sql-server
    environment:
      ACCEPT_EULA: "Y"
      MSSQL_PID: Express
      SA_PASSWORD: StrongPassword???
    image: mcr.microsoft.com/mssql/server
    ports:
    - target: 1433
  proxy:
    image: dockercloud/haproxy
    links:
    - cathotel_monolith
    ports:
    - published: 80
      target: 80
    volumes:
    - /var/run/docker.sock:/var/run/docker.sock:rw
version: '3.4'